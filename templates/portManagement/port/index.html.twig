{% extends "dashboard/index.html.twig" %}
{% block title %}Ports List{% endblock %}
{% block breadcrumb %}
    <li><a href="{{ path('port_list') }}">Ports List</a></li>
{% endblock %}
 {% block body %}
<div class="content"> <div class="panel panel-flat">
        <div class="panel-heading-custom">
            {{ buttons.addItem("New Port",path("port_form")) }}
        </div>
        <table class="table" id="myTable">
            <thead>
            <tr>
                <th>Ref</th>
                <th>Name</th>
                <th>Country</th>
                <th>City</th>
                <th>Type</th>
                <th>Terminals</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
            </thead>
        </table>
    </div></div>

 {% endblock %}
{% block javascripts %}
    {{ scripts.dataTable("port_list",'{data: "ref"},{data: "name"},{data: "country", orderable: false},{data: "city"},{data: "portType"},{data: "terminals", orderable: false},{data: "image", orderable: false},{data: "actions", orderable: false,width:"10%"}') }}
{% endblock %}

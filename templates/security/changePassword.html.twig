{% import "layout/macros/buttons.html.twig" as buttons %}
{% import "layout/macros/forms.html.twig" as forms %}
{% import "layout/macros/scripts.html.twig" as scripts %}
{% extends 'base.html.twig' %}
{% block title %}{{ "Change Password"|trans }}{% endblock %}
{% block breadcrumb %}
    <li><a href="{{ path('change_password') }}">{{ "Change Password"|trans }}</a></li>
{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <h1 class="title-chang-pass">{{ "Change Password"|trans }}</h1>
            {{ form_start(form) }}
            <div class="panel panel-flat">
                <div class="panel-body">
                    <div class="row input-pass-change">
                        <div class="col-md-12 pad-change-pass"> {{ form_row(form.oldPassword) }}</div>
                        <div class="col-md-12 pad-change-pass"> {{ form_row(form.newPassword.first) }}</div>
                        <div class="col-md-12 pad-change-pass"> {{ form_row(form.newPassword.second) }}</div>
                        {{ buttons.submitForm() }}
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}